/* pages/camera/camera.wxss */
.container {
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx 0;
  color: #333;
  border-left: 8rpx solid #007aff;
  padding-left: 16rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 16rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.button-group button {
  width: 48%;
}

.webview-container {
  width: 100%;
  height: 400rpx;
  margin: 20rpx 0;
  border: 1px solid #ccc;
}

.placeholder {
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  color: #999;
  border-radius: 8rpx;
}

.captured-image {
  width: 100%;
  margin-top: 20rpx;
  border-radius: 8rpx;
}

.video-section, .control-section, .stream-section {
  margin-bottom: 40rpx;
}